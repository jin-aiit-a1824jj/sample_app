
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
    <!-- リスト 14.23: プロフィールページにフォロー用フォームとフォロワーの統計情報を追加する -->
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    
  </aside>

<!-- リスト 13.24: マイクロポストをユーザーのshowページ (プロフィール画面) に追加する -->  
  <div class="pagination col-md-8"><!-- https://qiita.com/souuuuta/items/24f41dc1338406676f68-->
    
    <!-- リスト 14.23: プロフィールページにフォロー用フォームとフォロワーの統計情報を追加する -->
    <%= render 'follow_form' if logged_in? %>
    
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
  
</div>